{
  "name": "Focus",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Helps you focus on your work.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/setup/index.html",
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "Focus",
    "default_popup": "src/popup/index.html"
  },
  "permissions": [
    "tabs",
    "alarms",
    "storage",
    "notifications"
  ]
}